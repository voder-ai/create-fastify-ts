{
  "name": "@voder-ai/create-fastify-ts",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "create-fastify-ts": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "user-docs"
  ],
  "directories": {
    "doc": "user-docs"
  },
  "scripts": {
    "preinstall": "node -e \"const pkg=require('./package.json'); if (pkg.name==='@voder-ai/create-fastify-ts' && require('fs').existsSync('./scripts/check-node-version.mjs')) require('./scripts/check-node-version.mjs');\"",
    "build": "tsc -p tsconfig.json && node ./scripts/copy-template-files.mjs",
    "test": "vitest run --exclude '**/*.smoke.test.ts'",
    "test:smoke": "vitest run src/npm-init.smoke.test.ts",
    "test:coverage": "vitest run --coverage src/check-node-version.test.js src/cli.test.ts src/dev-server.test.ts src/generated-project-production-npm-start.test.ts src/index.test.js src/index.test.ts src/initializer.test.ts src/repo-hygiene.generated-projects.test.ts",
    "test:coverage:extended": "vitest run --coverage src/check-node-version.test.js src/cli.test.ts src/dev-server.test.ts src/generated-project-production-npm-start.test.ts src/index.test.js src/index.test.ts src/initializer.test.ts src/repo-hygiene.generated-projects.test.ts src/generated-project-production.test.ts src/generated-project-logging.test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "duplication": "jscpd --threshold 20 src scripts",
    "audit:ci": "npm audit --audit-level=moderate",
    "quality:lint-format-smoke": "node ./scripts/lint-format-smoke.mjs",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voder-ai/create-fastify-ts.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "voder",
    "micro-services",
    "template",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "bugs": {
    "url": "https://github.com/voder-ai/create-fastify-ts/issues"
  },
  "homepage": "https://github.com/voder-ai/create-fastify-ts#readme",
  "description": "",
  "overrides": {
    "semver-diff": "4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@semantic-release/exec": "^7.1.0",
    "@types/node": "24.10.2",
    "@typescript-eslint/parser": "8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "dry-aged-deps": "^2.5.0",
    "eslint": "9.39.1",
    "husky": "9.1.7",
    "jscpd": "^4.0.5",
    "prettier": "3.7.4",
    "semantic-release": "25.0.2",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "dependencies": {
    "@fastify/helmet": "13.0.2",
    "fastify": "5.6.2"
  }
}
