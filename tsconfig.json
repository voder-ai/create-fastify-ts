{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/dev-server.test.ts"
    // NOTE: dev-server tests are excluded from type checking due to the JS-only module import
  ]
}