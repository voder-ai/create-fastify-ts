{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/dev-server.test.ts" // This file uses `--test` mode of Node	.RUN_TESTS=1 node --test ./dist/dev-server.test.js
  ]
}
