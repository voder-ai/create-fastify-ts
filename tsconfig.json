{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    // Deliberate exclusion for Story 003.0 dev-server tests that import a JS-only module
    "src/dev-server.test.ts"
  ]
}